<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="calculadora" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.calculadora.persitence.Color</class>
    <class>com.calculadora.persitence.Historial</class>
    <class>com.calculadora.persitence.DependeColor</class>
    <class>com.calculadora.persitence.FacturarCotizar</class>
    <class>com.calculadora.persitence.Moldes</class>
    <class>com.calculadora.persitence.Cliente</class>
    <class>com.calculadora.persitence.NoColor</class>
    <class>com.calculadora.persitence.LineaDeTrabajo</class>
    <class>com.calculadora.persitence.Opcion</class>
    <class>com.calculadora.persitence.Herramienta</class>
    <class>com.calculadora.persitence.OpcionLinea</class>
    <class>com.calculadora.persitence.DetalleCotizacion</class>
    <class>com.calculadora.persitence.FacturaCotizar</class>
    <class>com.calculadora.persitence.DependeColorColor</class>
    <class>com.calculadora.persitence.Molde</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/calculadora_concrecol?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
